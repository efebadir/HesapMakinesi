<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBolme"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/orange"
        android:onClick="buttonOperator"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/buttonSil"
        app:layout_constraintTop_toBottomOf="@+id/buttonCarpma" />

    <Button
        android:id="@+id/buttonCarpma"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/orange"
        android:onClick="buttonOperator"
        android:text="*"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/buttonSil"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonCikar"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/orange"
        android:onClick="buttonOperator"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonTemizle" />

    <Button
        android:id="@+id/buttonTemizle"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:backgroundTint="@color/pink"
        android:onClick="buttonTiklama"
        android:text="CE"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/buttonSil"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/pink"
        android:onClick="buttonTiklama"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/buttonVirgul"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button0"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/buttonEsittir"
        android:layout_width="286dp"
        android:layout_height="100dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/orange"
        android:onClick="buttonOperator"
        android:text="="
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCarpma" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/buttonTopla"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/orange"
        android:onClick="buttonOperator"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonCikar" />

    <Button
        android:id="@+id/buttonVirgul"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/Grey"
        android:onClick="buttonTiklama"
        android:text=","
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:background="@color/Grey"
        android:elevation="1dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:gravity="right"
        android:inputType="text"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:paddingBottom="10dp"
        android:text="@null"
        android:textAllCaps="false"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>